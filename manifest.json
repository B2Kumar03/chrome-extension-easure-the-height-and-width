{
    "manifest_version": 3,
    "name": "Measurement Extension",
    "version": "1.0",
    "description": "Measure the height and width of a dragged area.",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  